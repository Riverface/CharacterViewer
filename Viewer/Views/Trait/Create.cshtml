@{
  Layout = "_Layout";
}

@model Viewer.Models.Trait

<div>

  <div class='entryLabel'>
    <h4>Add a new Trait</h4>
  </div>
  <div class='entry'>

    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, new{@required = "required"})
      <input type="submit" value="Add new Trait"/>
    }
  </div>
</div>
<p>@Html.ActionLink("Show all Traits", "Index")</p>