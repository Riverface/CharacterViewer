@{
  Layout = "_Layout";
}

@model Viewer.Models.Character
<div>

  <div class='entryLabel'>
    <h4>Add a new Character</h4>
  </div>

  <div class='entry'>
    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, new{@required = "required"})
      <input type="submit" value="Add new Character" class="btn btn-default" />
    }
  </div>
</div>